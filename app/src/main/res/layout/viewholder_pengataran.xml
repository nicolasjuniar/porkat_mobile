<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    android:layout_marginTop="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="150dp"
            android:layout_height="120dp"
            android:id="@+id/img_menu"
            android:scaleType="centerCrop"
            android:src="@drawable/mie_ayam"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_namalengkap"
            app:layout_constraintLeft_toRightOf="@id/img_menu"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_margin="10dp"
            tools:text="Nicolas Juniar"
            android:textSize="17sp"
            android:textColor="@color/colorPrimary"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_alamat"
            tools:text="Jl. asdsadsadsa"
            android:textSize="17sp"
            android:textColor="@color/colorPrimary"
            app:layout_constraintLeft_toRightOf="@id/img_menu"
            app:layout_constraintTop_toBottomOf="@id/tv_namalengkap"
            android:layout_margin="10dp"/>

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@color/Red"
            android:id="@+id/img_indicator"
            app:layout_constraintLeft_toRightOf="@id/img_menu"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_margin="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_waktu"
            tools:text="15 Menit"
            app:layout_constraintLeft_toRightOf="@id/img_indicator"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_margin="10dp"
            android:textSize="17sp"
            android:textColor="@color/colorPrimary"/>
    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>