<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginBottom="3dp">
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/img_profile"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_margin="5dp"
            android:src="@color/Red"/>

        <TextView
            android:id="@+id/tv_character"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="A"
            android:textColor="@color/White"
            android:textAllCaps="true"
            android:textSize="25sp"
            app:layout_constraintBottom_toBottomOf="@id/img_profile"
            app:layout_constraintLeft_toLeftOf="@id/img_profile"
            app:layout_constraintRight_toRightOf="@id/img_profile"
            app:layout_constraintTop_toTopOf="@id/img_profile" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@id/img_profile"
            android:layout_margin="5dp"
            android:id="@+id/tv_fullname"
            android:textSize="16sp"
            tools:text="reviewer"
            android:textColor="@color/text_1"
            />

        <RatingBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rating"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_margin="5dp"
            style="?ratingBarStyleSmall"
            android:theme="@style/RatingBar"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_waktuulasan"
            app:layout_constraintTop_toBottomOf="@id/tv_fullname"
            app:layout_constraintLeft_toRightOf="@id/img_profile"
            android:layout_marginLeft="5dp"
            android:textSize="13sp"
            android:textColor="@color/text_2"
            tools:text="19 januari dab"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_ulasan"
            app:layout_constraintTop_toBottomOf="@id/img_profile"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:text="19 januari"
            android:layout_margin="5dp"
            android:textSize="16sp"
            android:textColor="@color/text_2"/>
    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>

