<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="275dp"
    android:orientation="vertical"
    >
    <android.support.v7.widget.CardView
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="3dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_photokatering"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:background="@color/colorAccent"
                />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/White"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_fullname"
                    android:text="Mie Ayam Enak"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="10dp"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:textColor="@color/Black"/>

                <ImageView
                    android:id="@+id/img_rating"
                    android:layout_width="wrap_content"
                    android:src="@drawable/ic_rating"
                    android:tint="@color/Gold"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@+id/tv_rating"
                    android:layout_marginRight="2dp"
                    android:layout_marginTop="7dp"
                    />

                <TextView
                    android:id="@+id/tv_rating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/Black"
                    android:text="4.5"
                    android:layout_marginRight="15dp"
                    android:layout_alignParentRight="true"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_address"
                    android:textColor="@color/Black"
                    android:text="Jl. Yogyakarta no. 132, Yogyakarta, Indonesia"
                    android:layout_below="@id/tv_fullname"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="15dp"/>

                <ImageView
                    android:id="@+id/img_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_location"
                    android:tint="@color/Black"
                    android:layout_below="@id/tv_address"
                    android:layout_marginLeft="10dp"
                    android:layout_marginBottom="10dp"/>

                <TextView
                    android:id="@+id/tv_distance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5 km"
                    android:textColor="@color/Black"
                    android:layout_below="@+id/tv_address"
                    android:layout_toRightOf="@+id/img_location"
                    android:layout_toEndOf="@+id/img_location"
                    android:layout_marginBottom="10dp"/>
            </RelativeLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>